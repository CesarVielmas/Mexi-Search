<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
    <style name="AppThemeCalendar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="materialCalendarTheme">@style/CustomMaterialDatePickerTheme</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
    
    </style>
    <style name="TittlePrincipal">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
    </style>
    <style name="TittlePrincipal_cont">
        <item name="android:textSize">18.5sp</item>
        <item name="android:textColor">#576F92</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>
    <style name="TittlePrincipal_linear">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrincipalText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/text_view_style</item>
        <item name="android:textColor">#939393</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">55dp</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrincipalInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <!-- <item name="android:layout_weight">0.5</item> -->
        <!-- <item name="android:drawablePadding">10dp</item> -->
         <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:fontFamily">@font/notosans_thin</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrincipalButtonSesion">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrincipalButtonSesionGoogle">
        <item name="android:layout_width">0dp</item>
        <item name="android:text">@string/principal_button_sesion_login</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button_style_google</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#576F92</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrincipalTextRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#56688E</item>
        <item name="android:textStyle">normal</item>
        
        <item name="android:fontFamily">@font/notosans_thin</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrincipalLinearLayoutWave">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/linear_layout_wave</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Registro -->
    <style name="TittleRegistro" parent="@style/TittlePrincipal">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">22dp</item>
    </style>
    <style name="TittleRegistro_cont" parent="@style/TittlePrincipal_cont">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TittleRegistro_cont_labels">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:fontFamily">@font/notosans_thin</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    <style name="PrincipalButtonSesionRegister" parent="PrincipalButtonSesion">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!-- Register Activity 3-->
   <style name="CustomMaterialDatePickerTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>
    <!-- Register Activity 4-->
    <style name="WarningPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#686868</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:fontFamily">@font/notosans_thin</item>
        <item name="android:gravity">start</item>
    </style>
    <!-- Register Activity 5-->
    <style name="ChangePhone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#bed0ff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:gravity">center</item>
    </style>
</resources>